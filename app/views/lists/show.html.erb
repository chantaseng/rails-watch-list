<h1><%= @list.name %></h1>

<ul>
<% @list.movies.each do |movie| %>
  <li>
    <%= movie.title %>
    <%= link_to "Delete",
      bookmark_path([@list, movie]),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }
    %>
  </li>
  <% end %>
</ul>

<%= link_to "Back to index", lists_path %>
<%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
